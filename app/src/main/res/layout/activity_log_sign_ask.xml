<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_log_sign_ask"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="octacode.allblue.code.wikipediaeditor.activities.LogSignAskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/login_button"
            android:textStyle="bold"
            android:textColor="@color/BayBlue"
            android:background="@drawable/rounded_layout_cyan"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp" />

        <Button
            android:background="@drawable/rounded_layout_cyan_solid"
            android:text="Create Account"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up_button"
            android:layout_above="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp" />

        <TextView
            android:textColor="#000"
            android:text="If you already have a account."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Please sign up to use all features on wikiEdit"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_above="@+id/sign_up_button"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="19dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/wiki_logo"
            android:id="@+id/imageView4"
            android:layout_marginBottom="58dp"
            android:layout_above="@+id/textView7"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
